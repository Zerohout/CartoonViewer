<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <!--#region TextBlocks Styles-->

    <Style x:Key="DlgDefaultBtnTBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="DlgSaveBtnTBlock" TargetType="TextBlock"
           BasedOn="{StaticResource DlgDefaultBtnTBlockStyle}">
        <Setter Property="Foreground" Value="LawnGreen"/>
    </Style>
    <Style x:Key="DlgNotSaveBtnTBlock" TargetType="TextBlock"
           BasedOn="{StaticResource DlgDefaultBtnTBlockStyle}">
        <Setter Property="Foreground" Value="Tomato"/>
    </Style>
    <Style x:Key="DlgCancelBtnTBlock" TargetType="TextBlock"
           BasedOn="{StaticResource DlgDefaultBtnTBlockStyle}">
        <Setter Property="Foreground" Value="DodgerBlue"/>
    </Style>

    <!--#endregion-->

    <!--#region Icons Styles-->

    <Style x:Key="DlgDefaultBtnIconStyle"
           TargetType="iconPacks:PackIconFontAwesome">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="DlgSaveBtnIconStyle" TargetType="iconPacks:PackIconFontAwesome"
           BasedOn="{StaticResource DlgDefaultBtnIconStyle}">
        <Setter Property="Foreground" Value="LawnGreen"/>
        <Setter Property="Kind" Value="ThumbsUpRegular"/>
    </Style>
    <Style x:Key="DlgNotSaveBtnIconStyle" TargetType="iconPacks:PackIconFontAwesome"
           BasedOn="{StaticResource DlgDefaultBtnIconStyle}">
        <Setter Property="Foreground" Value="Tomato"/>
        <Setter Property="Kind" Value="ThumbsDownRegular"/>
    </Style>
    <Style x:Key="DlgCancelBtnIconStyle" TargetType="iconPacks:PackIconFontAwesome"
           BasedOn="{StaticResource DlgDefaultBtnIconStyle}">
        <Setter Property="Foreground" Value="DodgerBlue"/>
        <Setter Property="Kind" Value="HandPaperRegular"/>
    </Style>

    <!--#endregion-->

    <!--#region Buttons Styles-->

    <Style
        x:Key="DlgSaveBtnStyle"
        TargetType="Button"
        BasedOn="{StaticResource DefaultMetroButtonStyle}">
        <Setter Property="Margin" Value="30,20" />
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel Orientation="Vertical">
                    <iconPacks:PackIconFontAwesome
                        Style="{StaticResource DlgSaveBtnIconStyle}" />
                    <TextBlock
                        Style="{StaticResource DlgSaveBtnTBlock}"
                        Text="Сохранить" />
                    <TextBlock
                        Style="{StaticResource DlgSaveBtnTBlock}"
                        Text="и" />
                    <TextBlock
                        Style="{StaticResource DlgSaveBtnTBlock}"
                        Text="продолжить" />
                </StackPanel>
            </Setter.Value>
        </Setter>
    </Style>


    <Style
        x:Key="DlgNotSaveBtnStyle"
        TargetType="Button"
        BasedOn="{StaticResource DefaultMetroButtonStyle}">
        <Setter Property="Margin" Value="30,20" />
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel Orientation="Vertical">
                    <iconPacks:PackIconFontAwesome
                        Style="{StaticResource DlgNotSaveBtnIconStyle}" />
                    <TextBlock
                        Style="{StaticResource DlgNotSaveBtnTBlock}"
                        Text="Не сохранять" />
                    <TextBlock
                        Style="{StaticResource DlgNotSaveBtnTBlock}"
                        Text="и" />
                    <TextBlock
                        Style="{StaticResource DlgNotSaveBtnTBlock}"
                        Text="продолжить" />
                </StackPanel>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="DlgCancelBtnStyle"
        TargetType="Button"
        BasedOn="{StaticResource DefaultMetroButtonStyle}">
        <Setter Property="Padding" Value="15" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel Orientation="Vertical">
                    <iconPacks:PackIconFontAwesome
                        Style="{StaticResource DlgCancelBtnIconStyle}" />
                    <TextBlock
                        Style="{StaticResource DlgCancelBtnTBlock}"
                        Text="Отменить" />
                    <TextBlock
                        Style="{StaticResource DlgCancelBtnTBlock}"
                        Text="действие" />
                </StackPanel>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

</ResourceDictionary>